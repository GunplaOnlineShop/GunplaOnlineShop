@model GunplaOnlineShop.ViewModels.LoginViewModel
@{
    ViewBag.title = "Sign In";
}
<link href="~/css/signin-form.css" rel="stylesheet" />
<div class="signup-form">
    <form method="post" class="form-horizontal">
        <div class="col-xs-8 col-xs-offset-4">
            <h2>Sign In</h2>
        </div>
        <div asp-validation-summary="All" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Email" class="control-label col-xs-4"></label>
            <div class="col-xs-8">
                <input asp-for="Email" class="form-control">
            </div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label col-xs-4"></label>
            <div class="col-xs-8">
                <input asp-for="Password" class="form-control">
            </div>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="form-group">
            <div class="col-xs-8 col-xs-offset-4">
                <p><label class="checkbox-inline" asp-for="RememberMe">
                    <input asp-for="RememberMe">
                    @Html.DisplayNameFor(m => m.RememberMe)
                    </label></p>
                <button type="submit" class="btn btn-primary btn-lg">Sign In</button>
            </div>
        </div>
    </form>
</div>