    .a-row:last-child {
        margin-bottom: 10px;
    }



    .a-info-container {
        width: 600px;
        text-size-adjust: 100%;
        text-align: left;
        padding-top: 14px;
        padding-bottom: 14px;
        padding-left: 18px;
        padding-right: 18px;
        margin-bottom: 0;
        font-size: 13px;
        font-family: 'Krona One', sans-serif;
        display: block;
        box-sizing: border-box;
        line-height: 19px;
    }

    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        -ms-user-select: none;
        user-select: none;
    }

    @@media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }

    .p-3 {
        max-width: 50%;
        margin: 0 auto;
    }

    .border-bottom {
        margin-left: 10px;
    }

    .fake-a {
        border: 0px;
        background-color: transparent;
        color: rgb(3,102,214);
        cursor: hand;
        margin-top:5px;
    }
    .fake-a:hover {
        text-decoration: underline;
    }
</style>

