            display: table;
            content: "";
            line-height: 0;
            font-size: 0;
        }

        .a-row:after {
            clear: both;
        }

    .a-button {
        background: #e7e9ec;
        border-radius: 3px;
        border-color: #adb1b8 #a2a6ac #8d9096;
        border-style: solid;
        border-width: 1px;
        cursor: pointer;
        display: inline-block;
        padding: 0;
        text-align: center;
        text-decoration: none !important;
        vertical-align: middle;
        width: 100%;
