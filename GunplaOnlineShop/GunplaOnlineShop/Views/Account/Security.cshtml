        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <div class="d-flex justify-content-between align-items-center w-100">
                <strong class="text-gray-dark">Password</strong>
                <a id="a-change-pwd" href="#">Change</a>
            </div>
            <span class="d-block">********</span>
            <form id="hidden-div-pwd" class="form-group hidden-div" style="display: none">
                <label for="newpwd">Enter password: </label>
                <input type="text" class="form-control" id="i-newpwd" placeholder="" required>
                <label for="confirmpwd">Confirm password: </label>
                <input type="text" class="form-control" id="i-confirmpwd" placeholder="" required>
                <button class="fake-a" type="submit" id="a-save-pwd">Save</button>
            </form>
        </div>
    </div>

    <button class="btn btn-primary btn-lg btn-block" asp-controller="Account" asp-action="Profile" type="submit">Save And Quit</button>
</div>

<script type="text/javascript">

    document.getElementById("a-change-name").onclick = function () {
        document.getElementById("hidden-div-username").style.display = "block";
    }

    document.getElementById("a-save-name").onclick = function () {
        document.getElementById("hidden-div-username").style.display = "none";
    }

    document.getElementById("a-change-email").onclick = function () {
        document.getElementById("hidden-div-email").style.display = "block";
    }

    document.getElementById("a-save-email").onclick = function () {
        document.getElementById("hidden-div-email").style.display = "none";
    }

    try {
        document.getElementById("a-change-phone").onclick = function () {
            document.getElementById("hidden-div-phone").style.display = "block";
        }
    } catch (e) {
        document.getElementById("a-add-phone").onclick = function () {
            document.getElementById("hidden-div-phone").style.display = "block";
        }
    }

    document.getElementById("a-save-phone").onclick = function () {
        document.getElementById("hidden-div-phone").style.display = "none";
    }

    document.getElementById("a-change-pwd").onclick = function () {
        document.getElementById("hidden-div-pwd").style.display = "block";
    }

    document.getElementById("a-save-pwd").onclick = function () {
        document.getElementById("hidden-div-pwd").style.display = "none";
    }
</script>

