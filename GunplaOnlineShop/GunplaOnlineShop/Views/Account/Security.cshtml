                <a id="a-change-email" href="#">Change</a>
            </div>
            <span class="d-block">@Model.Email</span>
            <div id="hidden-div-email" class=" form-group hidden-div" style="display: none">
                <label for="newemail">Enter your new email: </label>
                <input type="text" class="form-control" id="i-newemail" placeholder="" required>
                <button class="fake-a" type="submit" id="a-save-email">Save</button>
            </div>
        </div>
    </div>
    <div class="media text-muted pt-3">
        <svg width="32" height="32" viewBox="0 0 16 16" class="bi bi-phone" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" d="M11 1H5a1 1 0 0 0-1 1v12a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1zM5 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H5z" />
            <path fill-rule="evenodd" d="M8 14a1 1 0 1 0 0-2 1 1 0 0 0 0 2z" />
        </svg>
        <div class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <div class="d-flex justify-content-between align-items-center w-100">
                <strong class="text-gray-dark">Phone Number</strong>
                @if (string.IsNullOrEmpty(Model.Phone))
                {<a id="a-add-phone" href="#">Add</a> }
                else
                { <a id="a-change-phone" href="#">Change</a>}
            </div>
            <span class="d-block">@Model.Phone</span>
            <div id="hidden-div-phone" class="form-group hidden-div" style="display: none">
                <label for="newphone">Enter your new phone number: </label>
                <input type="text" class="form-control" id="i-newphone" placeholder="" required>
                <button class="fake-a" type="submit" id="a-save-phone">Save</button>
            </div>
        </div>
    </div>

    <div class="media text-muted pt-3">
        <svg width="32" height=32" viewBox="0 0 16 16" class="bi bi-shield-lock" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
