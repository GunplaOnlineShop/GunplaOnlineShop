@inject Microsoft.AspNetCore.Identity.SignInManager<ApplicationUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GunplaOnlineShop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src ="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="~/css/modern-business.css" rel="stylesheet">
    <link href="~/css/register_font.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-static-top navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" asp-action="index" asp-controller="home">Home</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse " id="navbarResponsive">
                <ul class="navbar-nav ml-auto text-center">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">HIGH GRADE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">REAL GRADE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">MASTER GRADE</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="" asp-action="">PERFECT GRADE</a>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownOtherGundam" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            OTHER GUNDAM SERIES
                        </a>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdownOtherGundam">
                            <a class="dropdown-item" asp-action="" asp-controller="">ENTRY GRADE</a>
                            <a class="dropdown-item" asp-action="" asp-controller="">RE/100</a>
                            <a class="dropdown-item" asp-action="" asp-controller="">HIRM High-Resolution Model</a>
                            <a class="dropdown-item" asp-action="" asp-controller="">SD Super Deformed</a>
                        </div>
                    </li>
                </ul>
                <ul class="navbar-nav ml-auto">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item ml-auto">
                            <form method="post" asp-controller="account" asp-action="logout">
                                <button type="submit" class="nav-link btn btn-link">
                                    Logout
                                </button>
                            </form>
                        </li>
                        <li class="nav-item">
                            <a class="nav-item" asp-controller="account" asp-action="Profile">
                                @User.Identity.Name
                            </a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="account" asp-action="register">SignUp</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="account" asp-action="login">SignIn</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <div class="jumbotron jumbotron-fluid bg-warning">
        <div class="container">
            <h1 class="display-3 text-white ">Gundam Online Shop</h1>
            <p class="h6 text-muted text-white">Explore your hobby </p>       
        </div>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - GunplaOnlineShop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
